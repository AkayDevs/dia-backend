# API Settings
PROJECT_NAME="Document Intelligence Analysis"
VERSION="1.0.0"
DESCRIPTION="API for Document Intelligence Analysis"
API_V1_STR="/api/v1"

# Security Settings
SECRET_KEY="replace-this-with-your-secure-secret-key"  # Use a strong secret key in production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 days
ALGORITHM="HS256"

# Database Configuration
SQLITE_URL="sqlite:///./dia.db"
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false  # Set to true for SQL query logging

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]

# File Upload Settings
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS={"pdf","docx","xlsx","png","jpg","jpeg"}

# Analysis Settings
MODEL_DIR="app/ml/models"
MAX_ANALYSIS_TIME=300
CONCURRENT_ANALYSIS_LIMIT=5
ANALYSIS_QUEUE_TIMEOUT=600

# Admin Configuration
ADMIN_BASE_URL="/admin"
ADMIN_PAGE_SIZE=25
ADMIN_PAGE_SIZE_OPTIONS=[25,50,100]

# Admin User Settings
FIRST_SUPERUSER="admin@example.com"
FIRST_SUPERUSER_PASSWORD="change-this-password"  # Change in production
FIRST_SUPERUSER_NAME="Admin"

# Email Configuration
SMTP_TLS=true
SMTP_PORT=587  # Common port for TLS
SMTP_HOST="smtp.example.com"
SMTP_USER="your-smtp-user"
SMTP_PASSWORD="your-smtp-password"
EMAILS_FROM_EMAIL="noreply@example.com"
EMAILS_FROM_NAME="DIA System"
EMAIL_TEMPLATES_DIR="app/email-templates"
EMAIL_RESET_TOKEN_EXPIRE_HOURS=24

# Rate Limiting Settings
RATE_LIMIT_PER_USER=1000  # Requests per day
RATE_LIMIT_BURST=100
RATE_LIMIT_WINDOW=3600  # Time window in seconds

# Security Settings
SECURITY_BCRYPT_ROUNDS=12
SECURITY_PASSWORD_SALT="replace-with-secure-salt"  # Change in production
SECURITY_PASSWORD_HASH="bcrypt"
SECURITY_PASSWORD_LENGTH_MIN=8
SECURITY_PASSWORD_LENGTH_MAX=50

# Session Settings
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SECURE=true  # Set to false in development if not using HTTPS
SESSION_COOKIE_SAMESITE="Lax"
SESSION_COOKIE_NAME="dia_session"
SESSION_COOKIE_EXPIRE=604800  # 7 days in seconds

# Logging Configuration
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE="logs/dia.log"
LOG_ROTATION="1 day"
LOG_RETENTION="1 month"

# Cache Settings
CACHE_TYPE="simple"  # Options: simple, redis
CACHE_REDIS_URL="redis://localhost:6379/0"  # Required only if CACHE_TYPE is redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX="dia_cache:"